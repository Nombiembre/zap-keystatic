---
interface Props {
  rating: any;
}

const { rating } = Astro.props;
---
<div class="flex items-center">
  <img class="img-fluid h-5 mr-[5px]" src="/images/stars.svg" alt="Stars" />
  <p class="font-bold text-sm flex gap-1">
    {rating.bold}
    <span class="font-normal">{rating.text}</span>
  </p>
</div>